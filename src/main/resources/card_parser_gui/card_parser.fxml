<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.web.WebView?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="600.0"
            fx:id="cardParserArea">
    <left>
        <VBox>
            <TextField fx:id="cardNameRequest" />
            <TreeView fx:id="parsedCardsColumn" VBox.vgrow="ALWAYS">
                <TreeItem fx:id="parsedCardsRoot" />
            </TreeView>
        </VBox>
    </left>
    <right>
        <VBox fx:id="rightContainer">
            <ProgressBar fx:id="progressBar" />
            <WebView fx:id="documentDisplay" />
            <HBox fx:id="cardOptions">
                <Button text="Shrink" />
                <Button text="Expand" />
            </HBox>
        </VBox>
    </right>
</BorderPane>
